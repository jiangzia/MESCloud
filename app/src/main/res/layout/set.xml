<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setbackground"
    >

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/domainicon" 
        android:contentDescription="@string/set_domain"/>

    <TextView
        android:id="@+id/tvsetdomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgview"
        android:layout_centerHorizontal="true"
        android:text="@string/set_domain" 
        android:textSize="20sp"
        android:textColor="@color/yellow"/>
    <EditText 
        android:id="@+id/etsetdomain"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsetdomain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/domain_tips"/>

    <Button
        android:id="@+id/btnset"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etsetdomain"
        android:layout_marginTop="20dp"
        android:text="@string/settings" 
        android:background="@color/yellow"
        android:textColor="@color/white"/>
    
    <Button
        android:id="@+id/btnclose"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnset"
        android:layout_marginTop="10dp"
        android:text="@string/close" 
        android:background="@color/yellow"
        android:textColor="@color/white"/>
</RelativeLayout>
