<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp"
    android:background="@drawable/bg_custom_dialog">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_title_custom_dialog">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_middle_custom_dialog">
        <TextView
            android:id="@+id/dialog_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#04AEDA"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="15dp"/>"
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_bottom_custom_dialog">
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/btn_ok"
            android:background="@drawable/dialog_button"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>  
